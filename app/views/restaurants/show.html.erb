<div>
    <h1><%= @restaurant.name %></h1>
    <h2> category: <%= @restaurant.category %></h2>
    <p> Address: <%= @restaurant.address %> </p>
</div>
<div>
<h2> Reviews </h2>
<ul class="list-group">
  <% @restaurant.reviews.each do |review| %>
    <li class="list-group-item"><%= review.content %></li>
  <% end %>
</ul>
      <%= link_to "Go back to restaurants list", restaurants_path %>
      <%= link_to "Add a new review", new_restaurant_review_path(@restaurant) %>
</div>
